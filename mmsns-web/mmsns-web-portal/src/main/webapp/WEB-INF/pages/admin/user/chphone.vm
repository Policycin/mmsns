<title>修改登录邮箱-个人空间-MMSNS个人博客</title>
<link rel="stylesheet" href="${request.getContextPath()}/plugins/layui/css/layui.css" media="all">
<link rel="stylesheet" href="${request.getContextPath()}/plugins/font-awesome/css/font-awesome.min.css" media="all">
<link rel="stylesheet" href="${request.getContextPath()}/resources/admin/css/user/chpwd.css" media="all">
#parse("/portal/header.vm")
<div class="layout-body">
    #parse("/admin/left.vm")
    <div class="layout-right">
        <div class="right-content">
            <div class="right-header">
                <span>绑定手机号码</span>
            </div>
            <div class="right-chpwdform">
                <form class="layui-form" action="">
                    <div class="layui-form-item">
                        <label class="layui-form-label">当前已绑定号码</label>
                        <div class="layui-input-inline">
                            <input type="text" name="title" required  disabled value="18639012025"  lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">登录密码</label>
                        <div class="layui-input-inline">
                            <input type="password" name="password" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item" style="margin-bottom: 5px;">
                        <label class="layui-form-label">手机号码</label>
                        <div class="layui-input-inline">
                            <input type="phone" name="password" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <span style="margin-left: 130px;float: left;"><a href="" style="color: #4eaa4c;display: block;width: 140px;height: 20px;float: left;border: 1px solid #ddd;background-color: #ddd;text-align: center">免费获取短信验证码</a></span>
                    <div class="layui-form-item" style="margin-top: 40px;">
                        <label class="layui-form-label">短信验证码</label>
                        <div class="layui-input-inline">
                            <input type="text" name="password" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <button class="layui-btn" lay-submit lay-filter="formDemo">绑定手机</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
#parse("/portal/footer.vm")
<script type="text/javascript" src="${request.getContextPath()}/plugins/jquery/jquery-3.1.0.min.js" charset="utf-8"></script>
